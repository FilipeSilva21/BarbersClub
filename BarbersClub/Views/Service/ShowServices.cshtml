@{
    ViewData["Title"] = "Feed de Serviços";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Service/ShowServices.css" asp-append-version="true" /> 
}

<div id="services-list-view" class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Feed de Serviços</h1>
        <p class="lead">Explore os trabalhos mais recentes e bem avaliados.</p>
    </div>

    <div class="mb-4">
        <button class="btn w-100 filters-toggle-btn" type="button" data-bs-toggle="collapse" data-bs-target="#filtersCollapse" aria-expanded="false" aria-controls="filtersCollapse">
            <i class="bi bi-funnel me-2"></i>
            Mostrar / Ocultar Filtros
        </button>
    </div>

    <div class="collapse filters-panel p-4 mb-5 shadow-sm rounded" id="filtersCollapse" data-bs-theme="dark">
        <form id="search-form">
            <div class="row g-3 align-items-end">
                <div class="col-lg-3 col-md-6">
                    <label for="barberShopName" class="form-label fw-semibold">Nome da Barbearia</label>
                    <input name="barberShopName" id="barberShopName" class="form-control" type="search" placeholder="Ex: Navalha de Ouro">
                </div>

                <div class="col-lg-3 col-md-6">
                    <label for="barber" class="form-label fw-semibold">Nome do Barbeiro</label>
                    <input name="barberName" id="barber" class="form-control" type="text" placeholder="Ex: João da Silva">
                </div>
                <div class="col-lg-3 col-md-6">
                    <label for="ServiceType" class="form-label fw-semibold">Tipo de Serviço</label>
                    <select id="ServiceType" name="serviceType" class="form-select">
                        <option value="">Todos</option>
                        <option value="CorteSocial">Corte Social</option>
                        <option value="CorteDiversificado">Corte Diversificado</option>
                        <option value="Barba">Barba</option>
                        <option value="Sombrancelha">Sobrancelha</option>
                        <option value="CorteSocialEBarba">Corte Social e Barba</option>
                    </select>
                </div>

                <div class="col-lg-3 col-md-6">
                    <label for="sortByFilter" class="form-label fw-semibold">Ordenar por</label>
                    <select id="sortByFilter" class="form-select">
                        <option value="date_desc" selected>Mais Recentes</option>
                        <option value="ratings_desc">Melhores Avaliações</option>
                    </select>
                </div>

                <div class="col-lg-3 col-md-6">
                    <label for="startDate" class="form-label fw-semibold">De:</label>
                    <input name="startDate" id="startDate" type="date" class="form-control">
                </div>
                <div class="col-lg-3 col-md-6">
                    <label for="endDate" class="form-label fw-semibold">Até:</label>
                    <input name="endDate" id="endDate" type="date" class="form-control">
                </div>

                <div class="col-lg-3 col-md-6 d-flex align-items-center">
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" id="hasPhotoFilter">
                        <label class="form-check-label fw-semibold" for="hasPhotoFilter">
                            Apenas com foto
                        </label>
                    </div>
                </div>
                
                <div class="col-lg-3 col-md-12 ms-auto text-end">
                    <button class="btn btn-gold w-100" type="submit">
                        <i class="bi bi-funnel-fill me-2"></i>Filtrar
                    </button>
                </div>
            </div>
        </form>
    </div>


    <div class="results-section">
        <h3 class="fw-bold mb-4">Serviços Encontrados</h3>
        <div id="results-container" class="row g-4">
            <p id="loading-message" class="text-center col-12">Carregando feed...</p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Service/ShowServices.js" asp-append-version="true"></script>
}