@model BarberClub.Models.Service 

@{
    ViewData["Title"] = "Editar Serviço";
}

<div class="container my-5">
    <h1 class="h2">Editar Agendamento</h1>
    <p class="text-muted">Altere os detalhes ou adicione uma foto para o serviço do cliente @Model.Client?.FirstName.</p>
    <hr />

    <div class="row">
        <div class="col-md-8 col-lg-6">
            @* Formulário para ATUALIZAR o serviço *@
            <form asp-action="UpdateServiceWithPhoto" asp-controller="Service" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="ServiceId" />

                @* ▼▼▼ PEQUENA CORREÇÃO APLICADA AQUI ▼▼▼ *@
                @* O campo para descrição deve ser um 'textarea', não um input de arquivo. *@
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Descrição (Opcional)</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label for="photoFile" class="form-label">Alterar Foto do Serviço</label>
                    <input class="form-control" type="file" id="photoFile" name="photoFile" accept="image/*">
                </div>
                
                <div class="mt-2">
                    <img id="imagePreview" src="@(string.IsNullOrEmpty(Model.ServiceImageUrl) ? "" : Model.ServiceImageUrl)" alt="Pré-visualização da imagem" 
                         style="max-width: 200px; max-height: 200px; display: @(string.IsNullOrEmpty(Model.ServiceImageUrl) ? "none" : "block");" />
                </div>
                
                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <div>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg"></i> Salvar Alterações
                        </button>
                        <a href="javascript:history.back()" class="btn btn-secondary">Voltar</a>
                    </div>
                    
                    @* ▼▼▼ NOVO BOTÃO DE CANCELAMENTO ADICIONADO AQUI ▼▼▼ *@
                    @* - type="button" para não submeter o formulário principal.
                        - data-service-id="@Model.ServiceId" para passar o ID do serviço para o JavaScript.
                    *@
                    <button type="button" id="cancel-button" class="btn btn-danger" data-service-id="@Model.ServiceId">
                        <i class="bi bi-trash"></i> Cancelar Agendamento
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/Service/EditService.js" asp-append-version="true"></script>
}