@{
    ViewData["Title"] = "Dashboard da Barbearia";
}

@section Styles {
    <link rel="stylesheet" href="~/css/NavBar/Dashboard.css" asp-append-version="true" />
}

<div class="dashboard-container container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold">Dashboard: <span id="barbershop-name" class="text-gold">Carregando...</span></h1>
        <a href="/BarberShop/EditProfile" class="btn btn-outline-gold">
            <i class="bi bi-pencil-square me-2"></i>Editar Perfil da Barbearia
        </a>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-lg-3 col-md-6">
            <div class="stat-card h-100">
                <div class="stat-icon"><i class="bi bi-calendar-check"></i></div>
                <div class="stat-info">
                    <span class="stat-title">Agendamentos Hoje</span>
                    <span id="appointments-today" class="stat-value">0</span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card h-100">
                <div class="stat-icon"><i class="bi bi-cash-coin"></i></div>
                <div class="stat-info">
                    <span class="stat-title">Faturamento do Dia</span>
                    <span id="revenue-today" class="stat-value">R$ 0,00</span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card h-100">
                <div class="stat-icon"><i class="bi bi-people-fill"></i></div>
                <div class="stat-info">
                    <span class="stat-title">Novos Clientes (Mês)</span>
                    <span id="new-clients-month" class="stat-value">0</span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card h-100">
                <div class="stat-icon"><i class="bi bi-star-fill"></i></div>
                <div class="stat-info">
                    <span class="stat-title">Avaliação Média</span>
                    <span id="average-rating" class="stat-value">...</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="dashboard-panel">
                <h4 class="panel-title">Próximos Agendamentos</h4>
                <div class="table-responsive">
                    <table class="table table-appointments">
                        <thead>
                            <tr>
                                <th>Cliente</th>
                                <th>Serviço</th>
                                <th>Horário</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody id="appointments-table-body">
                            <tr><td colspan="4" class="text-center p-5">Carregando agendamentos...</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="dashboard-panel">
                <h4 class="panel-title">Ações Rápidas</h4>
                <div class="list-group list-group-flush quick-actions-list">
                    <a href="#" class="list-group-item list-group-item-action"><i class="bi bi-calendar-plus me-3"></i>Novo Agendamento</a>
                    <a href="#" class="list-group-item list-group-item-action"><i class="bi bi-person-plus me-3"></i>Adicionar Cliente</a>
                    <a href="#" class="list-group-item list-group-item-action"><i class="bi bi-journal-text me-3"></i>Gerenciar Serviços</a>
                    <a href="#" class="list-group-item list-group-item-action"><i class="bi bi-graph-up me-3"></i>Ver Relatórios</a>
                </div>
            </div>
            <div class="dashboard-panel mt-4">
                 <h4 class="panel-title">Faturamento Semanal</h4>
                 <canvas id="revenue-chart"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/NavBar/Dashboard.js" asp-append-version="true"></script>
}