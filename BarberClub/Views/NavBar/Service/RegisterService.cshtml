@{
    ViewData["Title"] = "Agendar Novo Serviço";
}
@section Styles {
    <link rel="stylesheet" href="~/css/navbar/Service/RegisterService.css" asp-append-version="true" />
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card card-register-service">
                <div class="card-header text-center py-4">
                    <h1 class="h3 fw-bold mb-0">Agendar Novo Serviço</h1>
                    <p class="text-muted mb-0">Preencha os dados abaixo para criar um novo agendamento.</p>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form id="registerServiceForm" novalidate>
                        
                        <input type="hidden" id="barberShopId" name="barberShopId" />
                        <input type="hidden" id="userId" name="userId" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="date" class="form-label fw-semibold">Data do Serviço</label>
                                <input type="date" id="date" class="form-control" required>
                            </div>
                            <div class="col-md-6">
                                <label for="time" class="form-label fw-semibold">Hora do Serviço</label>
                                <select id="time" class="form-select" required disabled>
                                    <option value="" selected>Selecione uma data primeiro</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label for="services" class="form-label fw-semibold">Tipo de Serviço</label>
                                <select id="services" class="form-select" required>
                                    <option value="" selected disabled>Selecione um serviço disponível</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="price" class="form-label fw-semibold">Preço (R$)</label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input type="text" id="price" class="form-control" placeholder="0,00" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="description" class="form-label fw-semibold">Descrição (Opcional)</label>
                            <textarea id="description" class="form-control" rows="3" placeholder="Detalhes adicionais sobre o serviço..."></textarea>
                        </div>
                        
                        <div id="errorMessage" class="alert alert-danger d-none" role="alert"></div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-gold btn-lg">
                                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                <span class="button-text">Agendar Serviço</span>
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered"> <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Agendamento Realizado!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Seu serviço foi agendado com sucesso.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Entendido</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const PRESELECTED_BARBERSHOP_ID = @Json.Serialize(ViewBag.PreselectedBarberShopId ?? null);
        const CURRENT_USER_ID = @Json.Serialize(ViewBag.CurrentUserId ?? null);
        const AVAILABLE_SERVICES = @Json.Serialize(ViewBag.AvailableServices ?? new List<object>());
    </script>
    <script src="~/js/NavBar/Service/RegisterService.js" asp-append-version="true"></script>
}