@model BarberClub.Models.BarberShop
@using BarberClub.Models.Enums

@{
    ViewData["Title"] = "Cadastrar Barbearia";
}

@section Styles {
    <link rel="stylesheet" href="~/css/NavBar/BarberShop/RegisterBarberShop.css" asp-append-version="true" />
    <style>
        .services-checkbox-group {
            background-color: rgba(255, 255, 255, 0.05);
            border: 1px solid #444;
            max-height: 200px;
            overflow-y: auto;
        }
        .form-check-inline { margin-right: 1.5rem; }
    </style>
}

<div class="auth-container">
    <form asp-action="Create" asp-controller="BarberShopApi" method="post" id="barberShopForm">
        <h2>Cadastre sua Barbearia</h2>
        <p class="text">Preencha as informações abaixo para adicionar sua barbearia à plataforma.</p>

        <div class="mb-3 text-start">
            <label asp-for="Name" class="form-label">Nome da Barbearia</label>
            <input asp-for="Name" class="form-control" placeholder="Ex: Navalha de Ouro" required>
        </div>

        <div class="mb-3 text-start">
            <label asp-for="Address" class="form-label">Endereço</label>
            <input asp-for="Address" class="form-control" placeholder="Ex: Rua das Tesouras, 123" required>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3 text-start">
                <label asp-for="City" class="form-label">Cidade</label>
                <input asp-for="City" class="form-control" placeholder="Ex: Salvador" required>
            </div>
            <div class="col-md-6 mb-3 text-start">
                <label asp-for="State" class="form-label">Estado</label>
                <input asp-for="State" class="form-control" placeholder="Ex: BA" required>
            </div>
        </div>

        <div class="row">
            <div class="col-md-10 mb-3 text-start">
                <label asp-for="WhatsApp" class="form-label">WhatsApp</label>
                <input asp-for="WhatsApp" class="form-control" placeholder="(71) 99999-8888" required>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 mb-3 text-start">
                <label asp-for="Instagram" class="form-label">Instagram (Opcional)</label>
                <input asp-for="Instagram" class="form-control" placeholder="username">
            </div>
        </div>

        <div class="mb-4 text-start">
            <label class="form-label d-block">Serviços Oferecidos</label>
            <div class="services-checkbox-group p-3 rounded">
                @foreach (var service in Enum.GetValues(typeof(Services)))
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="OfferedServices" value="@service.ToString()" id="service-@service">
                        <label class="form-check-label" for="service-@service">
                            @System.Text.RegularExpressions.Regex.Replace(service.ToString(), "(\\B[A-Z])", " $1")
                        </label>
                    </div>
                }
            </div>
        </div>

        <div id="errorMessage" class="error-message mb-3"></div>

        <button type="submit" class="btn btn-primary w-100 d-flex align-items-center justify-content-center">
            <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true"></span>
            <span>Cadastrar Barbearia</span>
        </button>
    </form>
</div>

<div class="modal fade" id="successModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header border-0"><h5 class="modal-title">Sucesso!</h5></div>
            <div class="modal-body">Sua barbearia foi cadastrada com sucesso!</div>
            <div class="modal-footer border-0">
                <a id="redirectButton" href="@Url.Action("Index", "Home")" class="btn btn-primary">Ok, ir para o Dashboard</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/NavBar/BarberShop/RegisterBarberShop.js" asp-append-version="true"></script>
}