@using Repository.Models.Enums
@model Repository.Models.Service

@{ Layout = "_Layout"; }

@{
    ViewData["Title"] = "Editar Serviço";
    var allServiceTypes = Enum.GetValues(typeof(ServiceTypes)).Cast<ServiceTypes>();
}

<div class="container my-5">
    <h1 class="h2">Editar Agendamento</h1>
    <p class="text-muted">Altere os detalhes ou adicione uma foto para o serviço do cliente @Model.Client?.FirstName.</p>
    <hr />

    <div class="row">
        <div class="col-md-8 col-lg-6">
            <form asp-action="UpdateService" asp-controller="Service" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="ServiceId" />

                <div class="mb-3">
                    <label for="serviceType" class="form-label">Tipo de Serviço</label>
                    <select id="serviceType" name="ServiceType" class="form-select">
                        
                        @foreach (var serviceType in allServiceTypes)
                        {
                            if (Model.ServiceType == serviceType)
                            {
                                <option value="@serviceType" selected>@serviceType.ToString()</option>
                            }
                            else
                            {
                                <option value="@serviceType">@serviceType.ToString()</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Descrição (Opcional)</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label for="photoFile" class="form-label">Alterar Foto do Serviço</label>
                    
                    <input class="form-control" type="file" id="photoFile" name="UploadedImage" accept="image/*">
                </div>

                <div class="mt-2">
                    <img id="imagePreview" src="@(string.IsNullOrEmpty(Model.ServiceImageUrl) ? "" : Model.ServiceImageUrl)" 
                         alt="Pré-visualização da imagem"
                         style="max-width: 200px; max-height: 200px; display: @(string.IsNullOrEmpty(Model.ServiceImageUrl) ? "none" : "block");" />
                </div>

                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <div>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg"></i> Salvar Alterações
                        </button>
                        <a href="javascript:history.back()" class="btn btn-secondary">Voltar</a>
                    </div>

                    <button type="button" id="cancel-button" class="btn btn-danger" data-service-id="@Model.ServiceId">
                        <i class="bi bi-trash"></i> Cancelar Agendamento
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>const BARBERSHOP_ID = @Model.BarberShopId;</script>
    
    <script src="~/js/Service/EditService.js" asp-append-version="true"></script>
}