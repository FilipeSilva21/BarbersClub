<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - BarbersClub</title>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

        <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />

        @await RenderSectionAsync("Styles", required: false)
    </head>
    <body class="d-flex flex-column min-vh-100">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
                <div class="container">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-scissors"></i>
                        BarbersClub
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="/">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/services">Serviços</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="barberShops">Barbearias</a>
                            </li>
                        </ul>

                        <ul class="navbar-nav ms-auto d-flex align-items-center" id="user-menu">
                            <!-- JavaScript irá preencher com base no JWT -->
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <main role="main" class="flex-grow-1">
            @RenderBody()
        </main>

        <footer class="footer-barberclub">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start mb-2 mb-md-0">
                        <p class="mb-0">&copy; @DateTime.Now.Year - BarbersClub. Todos os direitos reservados.</p>
                    </div>
                    <div class="col-md-6 text-center text-md-end social-icons">
                        <a href="#" aria-label="Visite nosso Instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" aria-label="Visite nosso Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" aria-label="Fale conosco no WhatsApp"><i class="bi bi-whatsapp"></i></a>
                    </div>
                </div>
            </div>
        </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="~/js/Auth/Auth.js" asp-append-version="true"></script>

    <script>
            function logout() {
                localStorage.removeItem('jwt_token');
                localStorage.removeItem('user_name');
                
                window.location.href = '/';
            }
        </script>
    
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>