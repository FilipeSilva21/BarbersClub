@model BarbersClub.Business.DTOs.BarberShopRegisterRequest
@using Repository.Models.Enums

@{ Layout = "_Layout"; }

@{
    ViewData["Title"] = "Cadastrar Barbearia";
}

@section Styles {
    <link rel="stylesheet" href="~/css/BarberShop/RegisterBarberShop.css" asp-append-version="true" />
}

<div class="auth-container">
    <form id="registerBarberShopForm" asp-controller="BarberShopApi" asp-action="RegisterBarberShop" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        
        <h2>Cadastre sua Barbearia</h2>
        <p class="text">Preencha as informações abaixo para adicionar sua barbearia à plataforma.</p>

        <div class="mb-4 text-center">
            <div class="profile-picture-container">
                <img id="image-preview" src="/images/default-barbershop.png" alt="Pré-visualização da Foto" />
                <label asp-for="ProfilePicFile" class="picture-overlay">
                    <i class="bi bi-camera-fill"></i>
                    <span>Escolher Foto</span>
                </label>
                <input asp-for="ProfilePicFile" type="file" accept="image/*" class="d-none" />
            </div>
        </div>
        <div class="mb-3 text-start">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Ex: Navalha de Ouro" required>
        </div>
        <div class="mb-3 text-start">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" placeholder="Ex: Especialista em massagem e barboterapia" required>
        </div>
        <div class="mb-3 text-start">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" placeholder="Ex: Rua das Tesouras, 123" required>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3 text-start">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" placeholder="Ex: Salvador" required>
            </div>
            <div class="col-md-6 mb-3 text-start">
                <label asp-for="State"></label>
                <input asp-for="State" class="form-control" placeholder="Ex: BA" required>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3 text-start">
                <label asp-for="WhatsApp"></label>
                <input asp-for="WhatsApp" class="form-control" placeholder="(71) 99999-8888" required>
            </div>
            <div class="col-md-6 mb-3 text-start">
                <label asp-for="Instagram"></label>
                <input asp-for="Instagram" class="form-control" placeholder="username">
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6 mb-3 text-start">
                <label asp-for="OpeningHours" class="form-label">Horário de Abertura</label>
                <select asp-for="OpeningHours" class="form-select" required>
                    <option value="" disabled selected>Selecione...</option>
                    @for (int hour = 0; hour <= 23; hour++)
                    {
                        var time = $"{hour:D2}:00";
                        <option value="@time">@time</option>
                    }
                </select>
            </div>
            <div class="col-md-6 mb-3 text-start">
                <label asp-for="ClosingHours" class="form-label">Horário de Fechamento</label>
                <select asp-for="ClosingHours" class="form-select" required>
                    <option value="" disabled selected>Selecione...</option>
                    @for (int hour = 0; hour <= 23; hour++)
                    {
                        var time = (hour == 23) ? "23:59" : $"{hour:D2}:00";
                        <option value="@time">@time</option>
                    }
                </select>
            </div>
        </div>
        <div class="mb-3 text-start">
            <label class="form-label d-block">Dias de Funcionamento</label>
            <div class="working-days-group p-3 rounded">
                @foreach (var day in Enum.GetValues(typeof(WorkingDays)))
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="WorkingDays" value="@day.ToString()" id="day-@day">
                        <label class="form-check-label" for="day-@day">@day.ToString()</label>
                    </div>
                }
            </div>
        </div>

        <div class="mb-4 text-start">
            <label class="form-label d-block mb-2">Serviços e Preços</label>
            <div class="services-price-group p-3 rounded">
                @foreach (var service in Enum.GetValues(typeof(ServiceTypes)))
                {
                    var serviceName = service.ToString();
                    <div class="row g-2 align-items-center mb-2 service-price-row">
                        <div class="col-auto"><div class="form-check"><input class="form-check-input service-checkbox" type="checkbox" value="@serviceName" id="service-@serviceName"></div></div>
                        <div class="col"><label class="form-check-label" for="service-@serviceName">@serviceName</label></div>
                        <div class="col-4"><div class="input-group input-group-sm"><span class="input-group-text">R$</span><input type="number" class="form-control service-price-input" data-service-type="@serviceName" placeholder="Preço" disabled></div></div>
                    </div>
                }
            </div>
        </div>
        
        <div id="errorMessage" class="error-message mb-3 text-danger"></div>
        
        <button type="submit" class="btn btn-primary w-100 d-flex align-items-center justify-content-center">
            <span class="spinner-border spinner-border-sm me-2 d-none" role="status"></span>
            <span>Cadastrar Barbearia</span>
        </button>
    </form>
</div>

<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Sucesso!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Sua barbearia foi cadastrada com sucesso!
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Dashboard", "NavBar")" class="btn btn-primary">Ver dashboard</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/BarberShop/RegisterBarberShop.js" asp-append-version="true"></script>
}